{
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "ES2020", "dom.iterable"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@app/*": ["app/*"],
      "@images/*": ["images/*"],
      "@features/*": ["features/*"]
    }
  }
}
