{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom.iterable",
      "es2020",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@Components/*": [
        "Components/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@images/*": [
        "images/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}